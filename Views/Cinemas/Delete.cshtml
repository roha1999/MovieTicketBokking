@model Cinemas

@{
	ViewData["Title"] = "Delete Cinema";
}

<div class="row text">
	<div class="col-md-8 offset-2">
		<p>
			<h1>Delete Conformation for @Model.Name</h1>
		</p>
		<div class="row">
			<div class="col-md-8 offset-2">
					<div class="from-group text-center">
						<img class="border-info rounded-circle" style="max-width: 150px" id="LogoPreview" />
					</div>
					<div class="form-group">
						<label asp-for="Logo" class="control-lable" ></label>
						<input asp-for="Logo" asp- class="form-control" readonly/>
						<span asp-validation-for="Logo" class="text-danger"> </span>
					</div>
					<h1></h1>
					<div class="form-group">
						<label asp-for="Name" class="control-lable"></label>
						<input asp-for="Name" class="form-control" readonly/>
						<span asp-validation-for="Name" class="text-danger"> </span>
					</div>
					<h1></h1>
					<div class="form-group">
						<label asp-for="Description" class="control-lable"></label>
						<input asp-for="Description" class="form-control" readonly/>
						<span asp-validation-for="Description" class="text-danger"> </span>
					</div>
					<h1></h1>
					<div class="form-group">
						<form asp-action="Delete">
							<input type="hidden" asp-for="Id"/>
							<input type="submit" value="confirm" class="btn btn-danger float-end"/>
						</form>
						<a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
					</div>
			</div>
		</div>
	</div>
</div>

@section Scripts{
<script>

	$(document).ready(function () {
		var output = document.getElementById('LogoPreview');
		output.src = $("#Logo").val();
	})
</script>
}
